function flattenRecursive(arr) {
	return arr.reduce((acc, cur) => acc.concat(Array.isArray(cur) ? flattenRecursive(cur) : cur), []);
}

function flattenStack(arr) {
	const stack = [...arr];
	const res = [];
	while (stack.length) {
		const item = stack.pop();
		if (Array.isArray(item)) {
			stack.push(...item);
		} else {
			res.push(item);
		}
	}
	return res.reverse();
}

// ê°„ë‹¨ í…ŒìŠ¤íŠ¸
console.log(flattenRecursive([1, [2, [3]], 4]));
console.log(flattenStack([1, [2, [3]], 4]));

// ë‹¤í¬ëª¨ë“œ boolean
let dark = true;
document.querySelector('.bg-dark').addEventListener('click', function () {
	if (dark === true) {
		document.querySelector('.bg-dark').innerHTML = 'Light ğŸ”„';
		dark = false;
	} else {
		document.querySelector('.bg-dark').innerHTML = 'Dark ğŸ”„';
		dark = true;
	}
});

// ë‹¤í¬ëª¨ë“œ int
let dark2 = 1;
document.querySelector('.bg-dark').addEventListener('click', function () {
	if (dark2 % 2 === 1) {
		document.querySelector('.bg-dark').innerHTML = 'Light ğŸ”„';
		dark2 += 1;
	} else {
		document.querySelector('.bg-dark').innerHTML = 'Dark ğŸ”„';
		dark2 += 1;
	}
});

